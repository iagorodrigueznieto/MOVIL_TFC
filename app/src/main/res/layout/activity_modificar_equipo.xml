<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modificar Equipo"
            android:padding="10sp"
            android:textSize="15sp"
            android:background="#673AB7"
            android:textColor="@color/white"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="100sp"
            android:text="Modifica a un equipo"/>

    <EditText
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:layout_marginLeft="50sp"
            android:hint="Nombre del equipo"
            android:id="@+id/nombreEquipo"/>

    <EditText
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:id="@+id/editCiudad"
            android:layout_marginTop="40sp"
            android:hint="Ciudad"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrenador: "
            android:textSize="18sp"
            android:textStyle="italic|bold"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="30sp"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:orientation="horizontal">
        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eleccionEntrenador"
                android:layout_marginStart="50sp" />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40sp"
                android:id="@+id/btnCrearEntrenador"
                android:text="Crea un entrenador"/>

    </LinearLayout>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modificar"
            android:id="@+id/btnCrear"
            android:layout_marginTop="100sp"
            android:layout_marginLeft="150sp"/>

</LinearLayout>