<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:textColor="@color/white"
            android:text="BUSCAR JUGADORES"
            android:background="#7C4AD4"/>

    <EditText
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:id="@+id/barraBuscarJugadores"
            android:layout_marginTop="20sp"
            android:hint="Buscar un Jugador"
            android:layout_marginLeft="80sp"/>

    <Button
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:id="@+id/buscar"
            android:layout_marginTop="-34sp"
            android:layout_marginLeft="350sp"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jugadores"
            android:layout_marginTop="40sp"/>

</LinearLayout>