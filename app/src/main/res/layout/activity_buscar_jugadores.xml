<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout5">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:textColor="@color/white"
            android:text="BUSCAR JUGADORES"
            android:background="#7C4AD4"
            android:id="@+id/textView12"
            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/barraBuscarJugadores"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/barraBuscarJugadores"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Buscar un Jugador"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            android:layout_marginBottom="41dp"
            app:layout_constraintBottom_toTopOf="@+id/jugadores" />

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/jugadores"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barraBuscarJugadores" />

</androidx.constraintlayout.widget.ConstraintLayout>