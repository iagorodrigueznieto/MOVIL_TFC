<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:src="@drawable/icono_entrenador"
            app:layout_constraintStart_toStartOf="@+id/Medio"
            app:layout_constraintTop_toBottomOf="@+id/horizontal"/>

    <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="@string/nombre"
            app:layout_constraintEnd_toEndOf="@+id/vertical"
            app:layout_constraintTop_toBottomOf="@+id/horizontal2"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nombre"
            android:text="Prueba"
            app:layout_constraintStart_toEndOf="@+id/vertical"
            app:layout_constraintTop_toBottomOf="@+id/horizontal2"
            android:layout_marginLeft="40sp"
            android:textSize="20sp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prueba"
            android:id="@+id/apellido"
            app:layout_constraintStart_toEndOf="@+id/vertical"
            app:layout_constraintTop_toBottomOf="@+id/horizontal2"
            android:layout_marginTop="50sp"
            android:layout_marginLeft="40sp"
            android:textSize="20sp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prueba"
            android:id="@+id/fechaDeNacimiento"
            app:layout_constraintStart_toEndOf="@+id/vertical"
            app:layout_constraintTop_toBottomOf="@+id/horizontal2"
            android:layout_marginTop="100sp"
            android:layout_marginLeft="40sp"
            android:textSize="20sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prueba"
            android:id="@+id/nacionalidad"
            app:layout_constraintStart_toEndOf="@+id/vertical"
            app:layout_constraintTop_toBottomOf="@+id/horizontal2"
            android:layout_marginTop="150sp"
            android:layout_marginLeft="40sp"
            android:textSize="20sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:textSize="20sp"

            app:layout_constraintEnd_toEndOf="@+id/vertical"
            app:layout_constraintTop_toBottomOf="@+id/horizontal2"
            android:text="@string/apellidos"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/vertical"
            app:layout_constraintTop_toBottomOf="@+id/horizontal2"
            android:textSize="20sp"
            android:layout_marginTop="100sp"
            android:text="@string/fechaNacimiento"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/nacionalidad"
            android:layout_marginTop="150sp"
            app:layout_constraintEnd_toEndOf="@+id/vertical"
            app:layout_constraintTop_toBottomOf="@+id/horizontal2"
            />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Medio"
            app:layout_constraintGuide_percent="0.43"
            android:orientation="vertical" />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vertical"
            app:layout_constraintGuide_percent="0.46"
            android:orientation="vertical" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/medioVertical"
        app:layout_constraintGuide_percent="0.50"
        android:orientation="vertical" />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/horizontal"
            app:layout_constraintGuide_percent="0.05"
            android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/horizontal2"
            app:layout_constraintGuide_percent="0.22"
            android:orientation="horizontal" />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:id="@+id/btnEliminar"
            app:layout_constraintTop_toBottomOf="@+id/horizontal2"
            android:layout_marginTop="220sp"
            app:layout_constraintEnd_toStartOf="@id/medioVertical"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modificar"
            android:id="@+id/modificar"
            app:layout_constraintTop_toBottomOf="@+id/horizontal2"
            android:layout_marginTop="220sp"
            app:layout_constraintStart_toStartOf="@id/medioVertical"/>

</androidx.constraintlayout.widget.ConstraintLayout>