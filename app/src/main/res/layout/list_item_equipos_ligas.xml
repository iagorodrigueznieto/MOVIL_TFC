<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView android:layout_width="60sp" android:layout_height="60sp"
               android:src="@drawable/icono_equipo"
               android:layout_marginTop="30sp"
               android:layout_marginLeft="32sp"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textSize="15sp"
              android:layout_marginTop="-50sp"
              android:layout_marginLeft="120sp"
              android:text="Nombre Equipo"
              android:textStyle="italic|bold"
              android:id="@+id/nombreEquipo"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textSize="10sp"
                android:textStyle="italic"
              android:text="Puntos: "
              android:layout_marginTop="5sp"
              android:layout_marginLeft="120sp"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="PuntosHechos"
            android:textStyle="bold"
            android:id="@+id/puntosHechos"
            android:layout_marginLeft="155sp"
            android:layout_marginTop="-14sp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posicion"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/posicion"
            android:layout_marginLeft="300sp"
            android:layout_marginTop="-25sp"/>

</LinearLayout>