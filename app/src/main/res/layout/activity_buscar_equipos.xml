<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout4">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Busca un equipo"
            android:background="#7549C4"
            android:padding="10sp"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:id="@+id/textView11"
            android:layout_marginBottom="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/etBuscarEquipo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Busca un Equipo"
            android:id="@+id/etBuscarEquipo"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            android:layout_marginBottom="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/listaEquipos"
            app:layout_constraintStart_toStartOf="parent" />

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/listaEquipos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etBuscarEquipo" />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline23"
            app:layout_constraintGuide_begin="20dp"
            android:orientation="vertical" />


</androidx.constraintlayout.widget.ConstraintLayout>