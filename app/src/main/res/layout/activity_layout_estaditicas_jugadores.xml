<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout3">

    <ImageView
            android:layout_width="80sp"
            android:layout_height="80sp"
            app:layout_constraintStart_toEndOf="@+id/vertical"
            app:layout_constraintBottom_toBottomOf="@id/horizontalInfo"
            android:layout_marginBottom="40sp"
            android:src="@drawable/icono_jugador"
            android:id="@+id/imageView" />


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nombreJugador"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@id/horizontalInfo"
            android:layout_marginTop="-100sp"
            app:layout_constraintStart_toStartOf="@id/medioVertical"
            android:textStyle="bold|italic"
            android:text="Prueba" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posicion"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/horizontalInfo"
            app:layout_constraintStart_toStartOf="@+id/vertical"
            android:id="@+id/textView4" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PosiciÃ³n"
            android:id="@+id/posicion"
            android:textStyle="bold"
            android:textSize="17sp"
            app:layout_constraintTop_toTopOf="@+id/horizontalInfo"
            app:layout_constraintStart_toStartOf="@+id/VerticalEdit" />


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goles: "
            android:layout_marginTop="300sp"
            app:layout_constraintTop_toTopOf="@+id/horizontalInfo"
            app:layout_constraintStart_toStartOf="@+id/vertical"
            android:textSize="18sp"
            android:id="@+id/textView5" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prueba"
            app:layout_constraintTop_toTopOf="@id/horizontalInfo"
            app:layout_constraintStart_toStartOf="@+id/VerticalEdit"
            android:layout_marginTop="300sp"
            android:textStyle="bold"
            android:id="@+id/goles"
            android:textSize="18sp" />


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asistencias: "
            android:layout_marginTop="240sp"
            app:layout_constraintTop_toTopOf="@+id/horizontalInfo"
            app:layout_constraintStart_toStartOf="@+id/vertical"
            android:textSize="18sp"
            android:id="@+id/textView6" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prueba"
            app:layout_constraintTop_toTopOf="@id/horizontalInfo"
            app:layout_constraintStart_toStartOf="@+id/VerticalEdit"
            android:layout_marginTop="240sp"
            android:id="@+id/asistencias"
            android:textStyle="bold"
            android:textSize="18sp" />


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de nacimiento: "
            android:layout_marginTop="180sp"
            app:layout_constraintTop_toTopOf="@+id/horizontalInfo"
            app:layout_constraintStart_toStartOf="@+id/vertical"
            android:textSize="18sp"
            android:id="@+id/textView7" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prueba"
            app:layout_constraintTop_toTopOf="@id/horizontalInfo"
            app:layout_constraintStart_toStartOf="@+id/VerticalEdit"
            android:layout_marginTop="180sp"
            android:textSize="18sp"
            android:id="@+id/fechaDeNacimiento"
            android:textStyle="bold" />


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarjetas amarillas:"
            android:layout_marginTop="120sp"
            app:layout_constraintTop_toTopOf="@+id/horizontalInfo"
            app:layout_constraintStart_toStartOf="@+id/vertical"
            android:textSize="18sp"
            android:id="@+id/textView8" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prueba"
            app:layout_constraintTop_toTopOf="@id/horizontalInfo"
            app:layout_constraintStart_toStartOf="@+id/VerticalEdit"
            android:layout_marginTop="120sp"
            android:id="@+id/tarjetasAmarillas"
            android:textSize="18sp"
            android:textStyle="bold" />


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Tarjetas Rojas: "
            android:layout_marginTop="60sp"
            app:layout_constraintTop_toTopOf="@+id/horizontalInfo"
            app:layout_constraintStart_toStartOf="@+id/vertical"
            android:id="@+id/textView9" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Prueba"
            android:textSize="18sp"
            android:layout_marginTop="60sp"
            app:layout_constraintTop_toTopOf="@id/horizontalInfo"
            app:layout_constraintStart_toStartOf="@+id/VerticalEdit"
            android:id="@+id/tarjetasRojas" />


    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            app:layout_constraintTop_toTopOf="@+id/horizontal"
            app:layout_constraintEnd_toEndOf="@+id/medioVertical"
            android:id="@+id/btnEliminarJugador" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modificar"
            app:layout_constraintTop_toTopOf="@+id/horizontal"
            app:layout_constraintStart_toStartOf="@+id/medioVertical"
            android:id="@+id/btnModificarJugador" />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vertical"
            app:layout_constraintGuide_percent="0.20"
            android:orientation="vertical" />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/horizontal"
            app:layout_constraintGuide_percent="0.70"
            android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalInfo"
            app:layout_constraintGuide_percent="0.20"
            android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/medioVertical"
            app:layout_constraintGuide_percent="0.5"
            android:orientation="vertical" />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/VerticalEdit"
            app:layout_constraintGuide_percent="0.7"
            android:orientation="vertical" />


</androidx.constraintlayout.widget.ConstraintLayout>