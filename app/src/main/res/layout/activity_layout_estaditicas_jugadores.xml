<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:src="@drawable/icono_jugador"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="20sp" />

    <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Nombre: "
              android:layout_marginTop="-40sp"

              android:layout_marginLeft="100sp"
              android:textSize="15sp" />

    <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/nombreJugador"
              android:layout_marginLeft="160sp"
                android:textSize="15sp"
                android:textStyle="bold|italic"
              android:layout_marginTop="-20sp"
              android:text="Prueba" />

    <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="100sp"
              android:text="Posicion"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PosiciÃ³n"
            android:layout_marginTop="-20sp"
            android:layout_marginLeft="160sp"
            android:id="@+id/posicion"
            android:textStyle="bold|italic"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goles: "
                android:textSize="18sp"
                android:layout_marginTop="90sp"
                android:layout_marginLeft="50sp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prueba"
                android:layout_marginTop="88sp"
                android:layout_marginLeft="15sp"
                android:textStyle="bold"
                android:id="@+id/goles"
                android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asistencias: "
                android:layout_marginTop="30sp"
                android:layout_marginLeft="50sp"
                android:textSize="18sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prueba"
                android:id="@+id/asistencias"
                android:layout_marginTop="30sp"
                android:layout_marginLeft="30sp"
                android:textStyle="bold"
                android:textSize="18sp"/>

    </LinearLayout>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de nacimiento: "
                android:layout_marginTop="30sp"
                android:layout_marginLeft="50sp"
                android:textSize="18sp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prueba"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="30sp"
                android:textSize="18sp"
                android:id="@+id/fechaDeNacimiento"
                android:textStyle="bold"/>

    </LinearLayout>



    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:text="Tarjetas amarillas:"
                android:textSize="18sp"
                android:layout_marginLeft="50sp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prueba"
                android:id="@+id/tarjetasAmarillas"
                android:layout_marginTop="30sp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="10sp"/>

    </LinearLayout>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_marginLeft="50sp"
                android:textSize="18sp"
                android:text="Tarjetas Rojas: "/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Prueba"
                android:textSize="20sp"
                android:id="@+id/tarjetasRojas"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="28sp"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            >
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80sp"
                android:layout_marginLeft="70sp"
                android:text="Eliminar"
                android:id="@+id/btnEliminarJugador"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modificar"
                android:id="@+id/btnModificarJugador"
                android:layout_marginTop="80sp"
                android:layout_marginLeft="30sp"/>

    </LinearLayout>




</LinearLayout>