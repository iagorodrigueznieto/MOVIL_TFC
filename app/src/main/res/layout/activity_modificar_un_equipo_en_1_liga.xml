<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="" />

    <ImageView
            android:layout_width="60sp"
            android:layout_height="60sp"
            app:layout_constraintEnd_toStartOf="@id/medio"
            app:layout_constraintBottom_toBottomOf="@+id/horizonatalFotos"
            android:layout_marginRight="100sp"
            android:src="@drawable/icono_equipo" />

    <ImageView
            android:layout_width="60sp"
            android:layout_height="60sp"
            app:layout_constraintStart_toStartOf="@id/medio"
            app:layout_constraintBottom_toBottomOf="@+id/horizonatalFotos"
            android:layout_marginLeft="100sp"
            android:src="@drawable/copa" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre equipo"
            android:textSize="15sp"
            android:id="@+id/nombreEquipo"
            app:layout_constraintEnd_toStartOf="@id/medio"
            app:layout_constraintTop_toBottomOf="@id/horizonatalFotos"
            app:layout_goneMarginRight="60sp"
            android:textStyle="italic" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Liga"
            android:textSize="15sp"
            android:id="@+id/nombreLiga"
            app:layout_constraintStart_toStartOf="@id/medio"
            app:layout_constraintTop_toBottomOf="@id/horizonatalFotos"
            app:layout_goneMarginLeft="75sp"
            android:textStyle="italic" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puntos: "
            android:layout_marginRight="10sp"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@id/medio"
            app:layout_constraintTop_toBottomOf="@id/horizonatalInfo" />

    <EditText
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:id="@+id/puntos"
            android:inputType="number"
            android:layout_marginTop="-10sp"
            android:textSize="15sp"
            android:layout_marginLeft="10sp"
            app:layout_constraintTop_toBottomOf="@id/horizonatalInfo"
            app:layout_constraintStart_toStartOf="@id/medio" />

    <EditText
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/partidosJugados"
            android:textSize="15sp"
            android:layout_marginTop="50sp"
            android:layout_marginLeft="10sp"
            app:layout_constraintTop_toBottomOf="@id/horizonatalInfo"
            app:layout_constraintStart_toStartOf="@id/medio" />

    <EditText
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:id="@+id/partidosGanados"
            android:inputType="number"
            android:textSize="15sp"
            android:layout_marginTop="100sp"
            android:layout_marginLeft="10sp"
            app:layout_constraintTop_toBottomOf="@id/horizonatalInfo"
            app:layout_constraintStart_toStartOf="@id/medio" />

    <EditText
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:id="@+id/partidosPerdidos"
            android:textSize="15sp"
            android:inputType="number"
            android:layout_marginTop="150sp"
            android:layout_marginLeft="10sp"
            app:layout_constraintTop_toBottomOf="@id/horizonatalInfo"
            app:layout_constraintStart_toStartOf="@id/medio" />

    <EditText
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:id="@+id/partidosEmpatados"
            android:inputType="number"
            android:textSize="15sp"
            android:layout_marginTop="200sp"
            android:layout_marginLeft="10sp"
            app:layout_constraintTop_toBottomOf="@id/horizonatalInfo"
            app:layout_constraintStart_toStartOf="@id/medio" />

    <EditText
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:id="@+id/golesAFavor"
            android:textSize="15sp"
            android:inputType="number"
            android:layout_marginTop="250sp"
            android:layout_marginLeft="10sp"
            app:layout_constraintTop_toBottomOf="@id/horizonatalInfo"
            app:layout_constraintStart_toStartOf="@id/medio" />

    <EditText
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:id="@+id/GolesEnContra"
            android:textSize="15sp"
            android:inputType="number"
            android:layout_marginTop="300sp"
            android:layout_marginLeft="10sp"
            app:layout_constraintTop_toBottomOf="@id/horizonatalInfo"
            app:layout_constraintStart_toStartOf="@id/medio" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/partidosJugados"
            android:layout_marginRight="10sp"
            android:layout_marginTop="60sp"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@id/medio"
            app:layout_constraintTop_toBottomOf="@id/horizonatalInfo" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/partidosGanados"
            android:layout_marginRight="10sp"
            android:layout_marginTop="110sp"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@id/medio"
            app:layout_constraintTop_toBottomOf="@id/horizonatalInfo" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Partidos Perdidos: "
            android:layout_marginRight="10sp"
            android:layout_marginTop="160sp"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@id/medio"
            app:layout_constraintTop_toBottomOf="@id/horizonatalInfo" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Partidos Empatados: "
            android:layout_marginRight="10sp"
            android:layout_marginTop="210sp"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@id/medio"
            app:layout_constraintTop_toBottomOf="@id/horizonatalInfo" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goles a favor:  "
            android:layout_marginRight="10sp"
            android:layout_marginTop="260sp"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@id/medio"
            app:layout_constraintTop_toBottomOf="@id/horizonatalInfo" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goles en contra: "
            android:layout_marginRight="10sp"
            android:layout_marginTop="310sp"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@id/medio"
            app:layout_constraintTop_toBottomOf="@id/horizonatalInfo" />


    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modificar informaciÃ³n"
            android:id="@+id/btnModificar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="352dp"
            app:layout_constraintTop_toBottomOf="@id/horizonatalInfo" />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/medio"
            app:layout_constraintGuide_percent="0.5"
            android:orientation="vertical" />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/horizonatalFotos"
            app:layout_constraintGuide_percent="0.1"
            android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/horizonatalInfo"
            app:layout_constraintGuide_percent="0.2"
            android:orientation="horizontal" />


</androidx.constraintlayout.widget.ConstraintLayout>