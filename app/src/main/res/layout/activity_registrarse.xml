<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="Registro"
            android:background="#5D34A5"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/nombreUsuario"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="80dp"
            android:hint="Nombre de Usuario"
            android:id="@+id/nombreUsuario"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="@+id/contraseña"
            app:layout_constraintBottom_toTopOf="@+id/contraseña"
            app:layout_constraintStart_toStartOf="@+id/contraseña" />

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="30sp"
            android:id="@+id/contraseña"
            android:inputType="textPassword"
            android:hint="Contraseña"
            app:layout_constraintTop_toBottomOf="@+id/nombreUsuario"
            app:layout_constraintEnd_toEndOf="@+id/contraseña2"
            app:layout_constraintBottom_toTopOf="@+id/contraseña2"
            app:layout_constraintStart_toStartOf="@+id/contraseña2" />

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="30sp"
            android:id="@+id/contraseña2"
            android:inputType="textPassword"
            android:hint="Repita su Contraseña"
            app:layout_constraintTop_toBottomOf="@+id/contraseña"
            app:layout_constraintEnd_toEndOf="@+id/mail"
            app:layout_constraintBottom_toTopOf="@+id/mail"
            app:layout_constraintStart_toStartOf="@+id/mail" />

    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingTop="20sp"
            android:id="@+id/mail"
            android:hint="Correo Electrónico"
            app:layout_constraintTop_toBottomOf="@+id/contraseña2"
            android:layout_marginBottom="31dp"
            app:layout_constraintEnd_toEndOf="@+id/imagen"
            app:layout_constraintBottom_toTopOf="@+id/imagen"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp" />


    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selImagen"
            android:text="Selecciona una imagen"
            android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@+id/mail"
            app:layout_constraintEnd_toStartOf="@+id/imagen"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp" />

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imagen"
            app:layout_constraintTop_toBottomOf="@+id/mail"
            app:layout_constraintStart_toEndOf="@+id/selImagen"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/btnRegistro"
            android:layout_marginEnd="85dp"
            android:layout_marginRight="85dp"/>


    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro"
            android:id="@+id/btnRegistro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagen"
            app:layout_constraintEnd_toStartOf="@+id/imagen"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="222dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>