<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- Fondo de pantalla -->
    <ImageView
            android:id="@+id/fondo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fondo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título -->
    <TextView
            android:id="@+id/titulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Menú Principal"
            android:background="#5D34A5"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:padding="10sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Login TextView -->
    <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/titulo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp" />

    <!-- Imagen del Usuario -->
    <ImageView
            android:id="@+id/ImagenUsuario"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/titulo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp" />

    <!-- Botones -->
    <Button
            android:id="@+id/btnLiga"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Clasificación de la Liga"
            app:layout_constraintTop_toBottomOf="@id/titulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="64dp"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintHeight_percent="0.08" />

    <Button
            android:id="@+id/btnEquipos"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Buscar un equipo"
            app:layout_constraintTop_toBottomOf="@id/btnLiga"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintHeight_percent="0.08" />

    <Button
            android:id="@+id/btnJugadores"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Buscar un Jugador"
            app:layout_constraintTop_toBottomOf="@id/btnEquipos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintHeight_percent="0.08" />

    <Button
            android:id="@+id/btnCrearEquipo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Crea un equipo"
            app:layout_constraintTop_toBottomOf="@id/btnJugadores"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintHeight_percent="0.08" />

    <Button
            android:id="@+id/btnCrearJugador"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Crear un jugador"
            app:layout_constraintTop_toBottomOf="@id/btnCrearEquipo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintHeight_percent="0.08" />

    <Button
            android:id="@+id/BuscarEntrenador"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Buscar entrenadores"
            app:layout_constraintTop_toBottomOf="@id/btnCrearJugador"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintHeight_percent="0.08" />

    <Button
            android:id="@+id/crearEntrenador"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Crear un entrenador"
            app:layout_constraintTop_toBottomOf="@id/BuscarEntrenador"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintHeight_percent="0.08" />

</androidx.constraintlayout.widget.ConstraintLayout>